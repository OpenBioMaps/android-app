<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hu.ektf.iot.openbiomapsapp.UploadActivity">

    <Button
        android:id="@+id/buttonExport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_export_text" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonExport"
        android:text="@string/button_upload_text" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerUploadList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttonUpload" />

    <TextView
        android:id="@+id/textViewEmpty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/emptylist"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />

</RelativeLayout>
